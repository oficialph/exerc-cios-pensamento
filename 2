1-
n = int(input("Digite um número inteiro positivo: "))

print("Números pares:")
for i in range(1, n + 1):
    if i % 2 == 0:
        print(i)

print("Números ímpares:")
for i in range(1, n + 1):
    if i % 2 != 0:
        print(i)

2-
numero = int(input("Digite um número inteiro: "))

print(f"Tabuada de {numero}:")
for i in range(1, 11):
    print(f"{numero} x {i} = {numero * i}")

3-
a = int(input("Digite o primeiro número inteiro positivo: "))
b = int(input("Digite o segundo número inteiro positivo: "))

soma = 0

for i in range(a, b + 1):
    if i % 3 == 0:
        soma += i

print(f"A soma dos números entre {a} e {b} que são divisíveis por 3 é: {soma}")

4-
n = int(input("Digite um número inteiro positivo: "))

fatorial = 1

for i in range(1, n + 1):
    fatorial *= i

print(f"O fatorial de {n} é {fatorial}.")

5-
numero = int(input("Digite um número inteiro positivo: "))

soma_digitos = 0

while numero > 0:
    soma_digitos += numero % 10
    numero //= 10

print(f"A soma dos dígitos é: {soma_digitos}")

6-
n = int(input("Digite um número inteiro: "))

fibonacci = [0, 1]

for i in range(2, n):
    proximo = fibonacci[i - 1] + fibonacci[i - 2]
    fibonacci.append(proximo)

if n == 1:
    print(f"A sequência de Fibonacci para {n} é: {fibonacci[0]}")
else:
    print(f"A sequência de Fibonacci para {n} é: {fibonacci[:n]}")

7-
numero = int(input("Digite um número inteiro positivo: "))

if numero < 2:
    print(f"{numero} não é um número primo.")
else:
    primo = True
    for i in range(2, int(numero**0.5) + 1):
        if numero % i == 0:
            primo = False
            break

    if primo:
        print(f"{numero} é um número primo.")
    else:
        print(f"{numero} não é um número primo.")

